---
/**
 * Camera video feed component
 * Displays the webcam video stream
 * 
 * Props:
 * - videoId: ID for the video element (default: 'video')
 */

interface Props {
    videoId?: string;
}

const { videoId = 'video' } = Astro.props;
---

<video id={videoId} autoplay playsinline muted></video>

<style>
    video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
        background-color: #000;
    }
</style>
