---
/**
 * Floating camera toggle button
 * Shared across practice and game modes
 */
---

<button id="cameraToggleBtn" class="camera-toggle-btn" title="Toggle Camera">
    <span class="camera-status-icon">ðŸ“¹</span>
</button>

<style>
    .camera-toggle-btn {
        position: fixed;
        bottom: 30px;
        left: 30px;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: 3px solid rgba(255, 255, 255, 0.3);
        font-size: 2rem;
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        touch-action: manipulation;
    }

    .camera-toggle-btn:hover {
        transform: scale(1.1) translateY(-2px);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
    }

    .camera-toggle-btn:active {
        transform: scale(0.95);
    }

    .camera-toggle-btn.camera-off {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border-color: rgba(255, 255, 255, 0.4);
    }

    .camera-toggle-btn.camera-off:hover {
        box-shadow: 0 12px 35px rgba(239, 68, 68, 0.5);
    }

    .camera-status-icon {
        font-size: 2rem;
        line-height: 1;
    }

    .camera-status-text {
        display: none;
    }

    /* Responsive styles */
    @media (max-width: 768px) {
        .camera-toggle-btn {
            width: 60px;
            height: 60px;
            bottom: 20px;
            left: 20px;
            font-size: 1.8rem;
        }
    }

    @media (max-width: 480px) {
        .camera-toggle-btn {
            width: 55px;
            height: 55px;
            bottom: 15px;
            left: 15px;
            font-size: 1.6rem;
        }
    }

    @media (max-width: 768px) and (orientation: landscape) {
        .camera-toggle-btn {
            width: 50px;
            height: 50px;
            bottom: 10px;
            left: 10px;
            font-size: 1.5rem;
        }
    }
</style>

