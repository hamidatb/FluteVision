---
import BaseLayout from '../layouts/BaseLayout.astro';
import FeatureCard from '../layouts/FeatureCard.astro';
---

<BaseLayout>
  <div class="container">
    <div class="hero">
      <h1>Learn Flute with AI</h1>
      <p class="tagline">Practice smarter, play better</p>
    </div>

    <!-- Feature Cards -->
    <div class="features">
      <FeatureCard
        cardIcon="ðŸ“¹"
        cardTitle="Practice Mode"
        cardParagraphText="Real-time fingering detection with instant feedback. Perfect for learning new notes and building confidence."
        cardButtonLink="/practice"
        cardButtonText="Start Practicing"
      />

      <FeatureCard
        cardIcon="ðŸŽ®"
        cardTitle="Game Mode"
        cardParagraphText="Turn practice into play! Jump over obstacles by playing the correct fingerings. Customize settings and choose your musical tests."
        cardButtonLink="/game"
        cardButtonText="Play Game"
      />

    <!-- Getting Started -->
    <div class="getting-started">
      <h2>Getting Started</h2>
      <div class="steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>Allow Camera</h3>
          <p>Grant camera access when prompted so we can see your fingerings.</p>
        </div>
        <div class="step">
          <div class="step-number">2</div>
          <h3>Position Hands</h3>
          <p>Show your hands clearly to the camera with good lighting.</p>
        </div>
        <div class="step">
          <div class="step-number">3</div>
          <h3>Start Playing</h3>
          <p>Choose practice mode to learn or game mode to have fun!</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
