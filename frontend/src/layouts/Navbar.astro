---
const { selectedPage } = Astro.props;
---

<header class="pixel-header">
  <div class="logo pixel-text">
    🎵 <span>FLUTE VISION</span>
  </div>

  <nav class="navbar">
    <button class="nav-btn" id="navbar-toggle" aria-label="Toggle navigation">
      ☰
    </button>

    <ul class="nav-list">
      <li>
        <a href="/" class={`nav-btn ${selectedPage === 'home' ? 'active' : ''}`}>
          <span class="icon">🏠</span> HOME
        </a>
      </li>
      <li>
        <a href="/game" class={`nav-btn ${selectedPage === 'game' ? 'active' : ''}`}>
          <span class="icon">🎮</span> GAME
        </a>
      </li>
      <li>
        <a href="/practice" class={`nav-btn ${selectedPage === 'practice' ? 'active' : ''}`}>
          <span class="icon">🎓</span> PRACTICE
        </a>
      </li>
      <!-- CSS sets the line div after the third child -->
      <!-- cam button is hidden unless its the game or practice pages -->
      <li>
        <button id="cameraToggleBtn" class={`nav-btn camera-toggle ${(selectedPage === 'game' || selectedPage === 'practice') ? '' : 'hidden'}`} title="Toggle Camera">
          <span class="icon icon-block">📹</span> CAMERA
        </button>
      </li>
      <li>
        <button id="visionModeToggleBtn" class={`nav-btn vision-mode-toggle ${(selectedPage === 'game' || selectedPage === 'practice') ? '' : 'hidden'}`} title="Toggle Vision Mode">
          <span class="icon icon-block">🎵</span>
        </button>
      </li>
    </ul>
  </nav>
</header>



